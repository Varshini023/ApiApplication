
@{
    ViewBag.Title = "Advertisement Details";
}


<div class="container" style="margin-top:30px">
    <h4><label>Advertisement Details</label></h4>
    <div id="example">
        <div class="demo-section k-header">
            <table class="table table-bordered table-striped" id="dataTable" style="width:80%">
                <thead>
                    <tr>
                        <th class="text-center" style="width:5%">Id</th>
                        <th class="text-center" style="width:20%">Name</th>
                        <th class="text-center">Image</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "https://localhost:44305/api/FileUploads",
            success: function (data) {
                var res = "";

                $.each(data, function (i, item) {
                    res += "<tr><td class='text-center'>" + item.ImageId + "</td>";
                    res += "<td class='text-center'>" + item.ImageName + "</td>";
                    res += "<td class='text-center'> <img src='data: image / png; base64, " + item.imagedata + "' style = 'height:80px; max - height: 80px'> </td>";
                    res += "</tr>";
                });
                $("#dataTable > tbody").html(res);
            }
        });
    });
</script>